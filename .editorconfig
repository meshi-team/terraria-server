root = true

[*]
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
charset = utf-8

[*.{tf,hcl}]
indent_style = space
indent_size  = 2

[*.{json,md,yml,yaml,toml}]
indent_style = space
indent_size  = 2

[{*.sh,*Dockerfile}]
indent_style       = space
indent_size        = 2
binary_next_line   = true
switch_case_indent = true
space_redirects    = true

[node_modules/**]
ignore = true
